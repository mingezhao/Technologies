@{
    ViewBag.Title = "Icons";
}
<header class="navbar navbar-fixed-top navbar-default">
    <div class="navbar-inner">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Content("~/")">@AppSettings.Options.SiteTitle</a>
            </div>

            <div class="container">
                <div class="container">
                    <div class="navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href="#glyphicons">Glyphicons</a>
                            </li>
                            <li>
                                <a href="#fontawesome">Font Awesome</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<div>
    <header class="jumbotron" id="overview">
        <div class="container">
            <h1>Icons</h1>
            <p>Glyphicons & Font Awesome</p>
        </div>
    </header>

    <div class="container" ng-controller="IconsCtrl">
        <section id="glyphicons">
            <h1 class="page-header">Glyphicons</h1>
            <div class="row">
                <div class="col-md-4 col-sm-3 icon-cell" ng-repeat="icon in Glyphicons">
                    <i class="glyphicon {{icon}}"></i>&nbsp;{{icon}}
                </div>
            </div>
        </section>
        <section id="fontawesome">
            <h1 class="page-header">Font Awesome</h1>
            <div class="row">
                <div class="col-md-4 col-sm-3 icon-cell" ng-repeat="icon in FontAwesome">
                    <i class="fa {{icon}}"></i>&nbsp;{{icon}}
                </div>
            </div>
        </section>
    </div>
</div>

@section scripts
{
    <environment names="Development">
        <script src="~/js/app-icons-index.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/app-icons-index.min.js"></script>
    </environment>
}