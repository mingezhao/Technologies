@model Technologies.AspNet5.Models.IconsModel
@{
    ViewBag.Title = "Icons";
}
<header class="navbar navbar-fixed-top navbar-default">
    <div class="navbar-inner">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="http://angular-ui.github.io/">Technologies</a>
            </div>

            <div class="container">
                <div class="container">
                    <div class="navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href="#glyphicons">Glyphicons</a>
                            </li>
                            <li>
                                <a href="#fontawesome">Font Awesome</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<div ng-controller="IconsCtrl">
    <header class="jumbotron" id="overview">
        <div class="container">
            <h1>Icons</h1>
            <p>The companion suite(s) to the <a href="http://angularjs.org">AngularJS</a> framework.</p>
        </div>
    </header>

    <div class="container">
        <section id="glyphicons">
            <h1 class="page-header">Glyphicons</h1>
            <ul>
                <li ng-repeat="icon in Glyphicons">
                    <span class="glyphicon {{icon}}"></span>
                </li>
            </ul>
        </section>
        <section id="fontawesome">
            <h1 class="page-header">Font Awesome</h1>
            
            <ul>
                <li ng-repeat="icon in FontAwesome">
                    <span class="fa {{icon}}"></span>
                </li>
            </ul>
        </section>
    </div>
</div>

@section scripts
{
    <script>
        angular.module('app', []).
            controller('IconsCtrl', function ($scope, $http) {
                $http.get('/icons/geticons').
                    success(function (data) {
                        $scope.Glyphicons = data.Glyphicons;
                        $scope.FontAwesome = data.FontAwesome;
                    });
            });
    </script>
}